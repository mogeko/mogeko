{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": { "ignoreUnknown": true },
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "formatter": { "useEditorconfig": true },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noCommaOperator": "off"
      }
    }
  }
}
