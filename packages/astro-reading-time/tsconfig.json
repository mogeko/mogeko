{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@mogeko/tsconfig/default.tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "types": ["vitest/importMeta"],
    "declaration": true,
    "isolatedDeclarations": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["lib", "tests", "index.ts", "*.config.ts"],
  "exclude": ["node_modules", "dist"]
}
